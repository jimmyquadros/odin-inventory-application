extends layout 

block content 
  h1 #{title}

  form(method='POST' action='')
    div.list-grid.form-grid
      label(for='name') Name: 
      input#name.text-input(type='text', name='name', value=(undefined===category ? '' : category.name), required='true')
      label(for='description') Description: 
      textarea#description(type='textarea', name='description', required='true') #{undefined===category ? '' : category.name}
      div
      button(type='submit') Submit

    if errors 
      ul 
        for error in errors 
          li!= error.msg