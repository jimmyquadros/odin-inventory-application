extends layout 

block content 
  h1 #{title}

  form(method='POST' action='')
    div.list-grid.form-grid
      label(for='name') Name: 
      input#name.text-input(type=text, name='name', value=(undefined===item ? '' : item.name), required='true')
      label(for='description') Description: 
      textarea#description(type='textarea', name='description', required='true') #{item===category ? '' : item.name}
      label(for='category') Category: 
      select#category(type='select', placeholder='Select Category', name='category', required='true')
        for category in categories 
          if item 
            option(value=category._id, selected=(category._id.toString()===item.category._id.toString() ? 'selected' : false)) #{category.name}
          else 
            option(value=category._id) #{category.name}
      label(for='price') Price: 
      input#price.number-input(type='number', name='price', value=(undefined===item ? '' : item.price), required='true')
      label(for='stock') Stock: 
      input#stock.number-input(type='number', name='stock', value=(undefined===item ? '' : item.stock), required='true')
      div 
      button(type='submit') Submit

  if errors 
    ul 
      for error in errors 
        li!= error.msg